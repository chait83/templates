		<dataType>uint32_t</dataType>
		<type>I</type>
		<desc>Provide an Input for initializing while loop</desc>
	</property>

<property id="count">
		<name>Count</name>
		<veneer type="S" />
		<defaultValue>0</defaultValue>
		<dataType>uint32_t</dataType>
		<type>I</type>
